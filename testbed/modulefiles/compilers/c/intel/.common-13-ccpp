#%Module1.0

# Software description
set html        "http://www.intel.com/"

# must have same version as
set sameversionlst "c/intel c++/intel fortran/intel idb"
source $env(MODULEPATH)/.sameversion
# should have same version as
set warnsameversionlst "mkl"

# Conflict
conflict        "$software"

# Loads software's environment
prepend-path    PATH                    "$intel/bin/intel64"
prepend-path    PATH                    "$intel/mpirt/bin/intel64"
prepend-path    PATH                    "$intel/bin/intel64_mic"
prepend-path    LD_LIBRARY_PATH         "$intel/compiler/lib/intel64"
prepend-path    LD_LIBRARY_PATH         "$intel/mpirt/lib/intel64"
#TODO create modules for tbb and ipp
prepend-path    LD_LIBRARY_PATH         "$intel/ipp/lib/intel64"
#FV(12/07/13) : disable due to incompatibility with intel opencl
#prepend-path    LD_LIBRARY_PATH         "$intel/tbb/lib/intel64"
prepend-path	MANPATH                 "$intel/man"
prepend-path	MANPATH                 "$intel/man/en_US"
prepend-path	NLSPATH                 "$intel/compiler/lib/intel64/locale/en_US"
prepend-path    INTEL_LICENSE_FILE      "$intel/Licenses"
prepend-path    IPPROOT                 "$intel/ipp"
prepend-path    TBBROOT                 "$intel/tbb"
prepend-path    LIBRARY_PATH            "$intel/compiler/lib/intel64"
prepend-path    LIBRARY_PATH            "$intel/ipp/../compiler/lib/intel64"
prepend-path    LIBRARY_PATH            "$intel/ipp/lib/intel64"
prepend-path    LIBRARY_PATH            "$intel/tbb/lib/intel64"
#setenv          OMP_NUM_THREADS         "1"
setenv          I_MPI_CC         "icc"

# load common functions and behavior
source $env(MODULEPATH)/.common

