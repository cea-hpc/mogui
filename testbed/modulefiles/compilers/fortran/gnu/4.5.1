#%Module1.0

# Software description
module-whatis   "GNU Fortran compiler"
set software    "fortran/gnu"
set version     "4.5.1"
set description "GNU Fortran compiler"
set html        "http://gcc.gnu.org/"

# Conflict
#conflict        "fortran"
conflict        "$software"

# Loads software's environment
set prefix      "/usr/local/gcc-$version"
# compilerwrappers-specific variables
set f77         "gfortran"
#set mpif90      ""

prepend-path    PATH                    "$prefix/bin"
prepend-path    LIBRARY_PATH            "$prefix/lib"
prepend-path    LD_LIBRARY_PATH         "$prefix/lib:$prefix/lib64"
prepend-path    MANPATH                 "$prefix/share/man"
prepend-path    INFOPATH                "$prefix/info"

# load common functions and behavior
source $env(MODULEPATH)/.common

