#%Module1.0

# Software description
module-whatis   "Distributed Debugging Tool"
set software    "ddt"
set version     "3.0"
set description "Debugger for scalar, multi-threaded and large-scale parallel applications"
set html        "http://www.allinea.com/"

# Conflict
conflict        "$software"

# Loads software's environment
set prefix      "/usr/local/ddt-$version"
# application-specific variables
set appnameup "DDT"
set exedir    "$prefix/bin"

prepend-path    PATH                    "$exedir"
prepend-path    LIBRARY_PATH            "$prefix/lib"
prepend-path    LD_LIBRARY_PATH         "$prefix/lib"

setenv          DDTPATH                 "$prefix"

# load common functions and behavior
source $env(MODULEPATH)/.common

