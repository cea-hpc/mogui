#%Module1.0

# Software description
module-whatis   "Cmake"
set software    "cmake"
set version     "2.8.3"
set description "Cross-platform, open-source build system"
set html        "http://www.cmake.org/"

# Conflict
conflict        "cmake"

# Loads software's environment
set prefix      "/usr/local/$software-$version"
# application-specific variables
set appnameup "CMAKE"
set exedir    "$prefix/bin"

prepend-path    PATH                    "$exedir"
prepend-path    MANPATH                 "$prefix/man"

# load common functions and behavior
source $env(MODULEPATH)/.common

