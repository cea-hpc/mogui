#%Module1.0

# Software description
module-whatis   "Intel Application Debugger"
set software    "idb"
set description "Intel Application Debugger (idb)"
set html        "http://www.intel.com/"

# must have same version as
set sameversionlst "c/intel c++/intel fortran/intel idb"
source $env(MODULEPATH)/.sameversion
# should have same version as
set warnsameversionlst "mkl"

# Conflict
conflict        "$software"

# Loads software's environment
# application-specific variables
set appnameup   "IDB"
set exedir      "$intel/bin/intel64"

prepend-path    PATH                    "$exedir"
prepend-path    LD_LIBRARY_PATH         "$intel/debugger/lib/intel64"
prepend-path	MANPATH                 "$intel/man"
prepend-path	NLSPATH                 "$intel/debugger/intel64/locale/en_US"

# load common functions and behavior
source $env(MODULEPATH)/.common

