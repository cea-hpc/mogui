#%Module1.0

# Software description
module-whatis   "Private cloud on a compute cluster prototype"
set software    "pcocc"
set version     "0.0.1"
set description "Run cluster of VMs on a compute cluster"
set html        ""

# Conflict
conflict        "$software"

# Loads software's environment
set prefix      "/opt/pcocc"
# application-specific variables
set appnameup "PCOCC"
set exedir    "$prefix/bin"

prepend-path    PATH                    "$exedir"
# setenv BRIDGE_ADDONS_APPEND "vm.ad"

# load common functions and behavior
source $env(MODULEPATH)/.common

