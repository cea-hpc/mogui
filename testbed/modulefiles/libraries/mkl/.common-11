#%Module1.0

# Software description
module-whatis   "Intel MKL Library"
set software    "mkl"
set description "Intel Math Kernel Library"
set html        "http://www.intel.com/"

# Conflict
conflict        "$software"

# Loads software's environment
prepend-path LD_LIBRARY_PATH "$mklroot/lib/em64t"

setenv MKLROOT         "$mklroot"
setenv MKL_LIBS        "-L$mklroot/lib/em64t -lmkl_intel_lp64 -lmkl_sequential -lmkl_core -lm"
setenv MKL_SCA_LIBS    "-L$mklroot/lib/em64t -lmkl_intel_lp64 -lmkl_sequential -lmkl_scalapack_lp64 -lmkl_core -lmkl_blacs_openmpi_lp64 -lm"
setenv MKL_LIBS_MT        "-L$mklroot/lib/em64t -lmkl_intel_lp64 -lmkl_intel_thread -lmkl_core -lm"
setenv MKL_SCA_LIBS_MT    "-L$mklroot/lib/em64t -lmkl_intel_lp64 -lmkl_intel_thread -lmkl_scalapack_lp64 -lmkl_core -lmkl_blacs_openmpi_lp64 -lm"


# load common functions and behavior
source $env(MODULEPATH)/.common

