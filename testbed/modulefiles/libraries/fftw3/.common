#%Module1.0

# Software description
module-whatis   "FFTW3"
set description "Fast Fourier Transform"
set html        "http://www.fftw.org/"

# Conflict
conflict        "$software"
conflict        "impi"

# Loads software's environment
set libdir      "$prefix/lib"
# application-specific variables
set appnameup   "FFTW3"
# compilerwrappers-specific variables
set ldflags     "-L$libdir -lfftw3"

append-path     LD_LIBRARY_PATH         "$libdir"

setenv          FFTW3_INC_DIR           "$prefix/include"
setenv          FFTW3_LIB_DIR           "$libdir"

# load common functions and behavior
source $env(MODULEPATH)/.common
