#%Module1.0
module-whatis   "FFTW2"
set software    "fftw2"
set version     "2.1.5"
set description "Discrete Fourier Transform"
set html        "http://www.fftw.org"

# Conflict
conflict "impi"

# Loads software's environment
set prefix      "/usr/local/$software-$version"
set libdir      "$prefix/lib"
# application-specific variables
set appnameup   "FFTW2"
# compilerwrappers-specific variables
set ldflags     "-L$libdir -lfftw"


setenv FFTW2_INC_DIR    "$prefix/include"
setenv FFTW2_LIB_DIR    "$libdir"

append-path LD_LIBRARY_PATH     "$libdir"

# load common functions and behavior
source $env(MODULEPATH)/.common
