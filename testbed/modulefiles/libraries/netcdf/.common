#%Module1.0

# Software description
module-whatis   "NetCDF"
set software    "netcdf"
set description "Network Common Data Form"
set html        "http://www.unidata.ucar.edu/software/netcdf/"

# Conflict
conflict        "$software"
conflict        impi

# Loads software's environment
set libdir      "$prefix/lib"
set exedir      "$prefix/bin"
# application-specific variables
set appnameup   "NETCDF"
# compilerwrappers-specific variables
set ldflags     "-L$libdir -lnetcdf"

append-path     PATH                    "$exedir"
append-path     LD_LIBRARY_PATH         "$libdir"
append-path     MANPATH                 "$prefix/share/man"

setenv          NETCDF_INC_DIR          "$prefix/include"
setenv          NETCDF_LIB_DIR          "$libdir"

# load common functions and behavior
source $env(MODULEPATH)/.common

