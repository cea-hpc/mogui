#%Module1.0

# Software description
module-whatis   "Qt"
set software    "qt"
set description "Graphical Library"
set html        "http://www.qtsoftware.com/"

# Conflict
conflict        "$software"

# Loads software's environment
set libdir      "$prefix/lib"
set exedir      "$prefix/bin"
# application-specific variables
set appnameup   "QT"
# compilerwrappers-specific variables
set ldflags     "-L$libdir -lQtCore"


prepend-path    PATH                    "$exedir"
prepend-path    LD_LIBRARY_PATH         "$libdir"
prepend-path    MANPATH                 "$prefix/man"

setenv          QT_LIB_DIR              "$libdir"
setenv          QT_INC_DIR              "$prefix/include"

# load common functions and behavior
source $env(MODULEPATH)/.common

